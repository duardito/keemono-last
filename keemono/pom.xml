<?xml version="1.0" encoding="UTF-8"?>
<project xmlns="http://maven.apache.org/POM/4.0.0"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/xsd/maven-4.0.0.xsd">
    <modelVersion>4.0.0</modelVersion>

    <groupId>org.com.keemono</groupId>
    <artifactId>keemono</artifactId>
    <packaging>pom</packaging>
    <version>${keemono.profect.version}</version>

    <properties>
        <keemono.profect.version>1.0-SNAPSHOT</keemono.profect.version>

        <!--INIT : SPRING DEPENDENCIES -->
        <spring.core.version>4.1.6.RELEASE</spring.core.version>
        <spring.data.jpa.version>1.8.0.RELEASE</spring.data.jpa.version>
        <spring.data.mongo.version>1.7.0.RELEASE</spring.data.mongo.version>
        <spring.data.solr.version>1.2.0.RELEASE</spring.data.solr.version>
        <spring.session.version>1.0.0.RELEASE</spring.session.version>
        <spring.integration.version>4.1.3.RELEASE</spring.integration.version>
        <spring.batch.version>3.0.3.RELEASE</spring.batch.version>
        <spring.security.version>4.0.0.RELEASE</spring.security.version>
        <!--END : SPRING DEPENDENCIES -->

        <!--INIT : ORIKA DEPENDENCIES -->
        <orika.version>1.4.0</orika.version>
        <!--END : ORIKA DEPENDENCIES -->

        <!--INIT : HIKARI DEPENDENCIES -->
        <!-- trying this connection pool instad c3po-->
        <!-- http://brettwooldridge.github.io/HikariCP/ -->
        <hikari.version>2.3.5</hikari.version>
        <!--END : HIKARI DEPENDENCIES -->
    </properties>

    <modules>
        <module>core</module>
        <module>web</module>
        <module>persistence</module>
        <module>service</module>
        <module>security</module>
    </modules>

    <dependencyManagement>
        <dependencies>
            <dependency>
                <groupId>com.zaxxer</groupId>
                <artifactId>HikariCP</artifactId>
                <version>${hikari.version}</version>
                <scope>compile</scope>
            </dependency>
            <dependency>
                <groupId>ma.glasnost.orika</groupId>
                <artifactId>orika-core</artifactId>
                <version>${orika.version}</version>
            </dependency>
            <dependency>
                <groupId>org.springframework</groupId>
                <artifactId>spring-context</artifactId>
                <version>${spring.core.version}</version>
            </dependency>
            <dependency>
                <groupId>org.springframework.data</groupId>
                <artifactId>spring-data-jpa</artifactId>
                <version>${spring.data.jpa.version}</version>
            </dependency>
            <dependency>
                <groupId>org.springframework.data</groupId>
                <artifactId>spring-data-mongodb</artifactId>
                <version>${spring.data.mongo.version}</version>
            </dependency>
            <dependency>
                <groupId>org.springframework.data</groupId>
                <artifactId>spring-data-solr</artifactId>
                <version>spring.data.solr.version</version>
            </dependency>
            <dependency>
                <groupId>org.springframework.session</groupId>
                <artifactId>spring-session</artifactId>
                <version>${spring.session.version}</version>
            </dependency>
            <dependency>
                <groupId>org.springframework.integration</groupId>
                <artifactId>spring-integration-core</artifactId>
                <version>${spring.integration.version}</version>
            </dependency>
            <dependency>
                <groupId>org.springframework.batch</groupId>
                <artifactId>spring-batch-core</artifactId>
                <version>${spring.batch.version}</version>
            </dependency>
            <dependency>
                <groupId>org.springframework.security</groupId>
                <artifactId>spring-security-web</artifactId>
                <version>${spring.security.version}</version>
            </dependency>
        </dependencies>
    </dependencyManagement>

</project>